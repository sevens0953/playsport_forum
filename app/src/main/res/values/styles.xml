<resources>

    <!-- Base application theme. DarkActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 輸入欄位 -->
        <item name="colorControlNormal">#e0e0e0</item>
        <item name="colorControlActivated">#039be5</item>
    </style>

    <!-- ==================== 其他登入區塊 ==================== -->

    <!-- TextView -->
    <style name="textview_signin">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">14dp</item>
    </style>

    <!--登入按鈕-->
    <!-- LinearLayout -->
    <style name="layout_signinbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Button -->
    <style name="button_signin">
        <item name="android:layout_width">108dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#3A5795</item>
        <item name="android:background">@drawable/radius_signin</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:padding">10dp</item>
    </style>


    <!-- ==================== 輸入欄位 ==================== -->

    <!-- ScrollView -->
    <style name="scroll_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">#fff</item>
    </style>

    <!-- LinearLayout -->
    <style name="layout_enter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- EditText -->
    <style name="layout_enter_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- TextView -->
    <style name="layout_enter_prompt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#bdbdbd</item>
    </style>

    <!--註冊按鈕
    <style name="button_up">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:background">@drawable/registered_icon</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>-->

    <!--註冊按鈕 PNG圖檔-->
    <style name="button_up_png">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/registered_icon_png</item>
        <item name="android:textColor">@drawable/text_blue</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <!--同意玩運彩會員條款-->
    <style name="button_ok">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- ==================== 其他 ==================== -->

    <!--提示字(或免費註冊)-->
    <style name="textview_prompt_text">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/radius</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#878787</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginTop">112dp</item>
    </style>

    <!--關閉按鈕-->
    <style name="imagebutton_off">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:src">@drawable/icon_close</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
